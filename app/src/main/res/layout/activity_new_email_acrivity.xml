<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewEmailActivity"
    android:background="#FFF">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ffffff"
        app:title=" " >

    <Button
        android:id="@+id/send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"/>

    </android.support.v7.widget.Toolbar>


    <EditText
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/who"
        android:inputType="textMultiLine" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/subject"
        android:inputType="textMultiLine"/>

    <EditText
        android:id="@+id/forwhom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/compose"
        android:inputType="textMultiLine"/>

    <android.support.v7.widget.AppCompatCheckBox

        android:id="@+id/galochka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/forwhom"
        android:layout_alignParentBottom="true"
        android:layout_margin="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/galochka"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="12dp"
        android:text="@string/chekbox" />

</LinearLayout>